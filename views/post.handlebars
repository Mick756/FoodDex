<div class="page">

    <nav class="navbar navbar-expand-lg navBar" style="background-color: #e3f2fd;">
        <a class="navbar-brand title" href="/">FoodDex</a>
        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link quickLink" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link quickLink" href="#">Bites</a>
                </li>
                {{#if signedIn}}
                    <li class="nav-item">
                        <a class="nav-link quickLink" href="#">Your Bites</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link quickLink" href="/signout" id="signOut">Sign Out</a>
                    </li>
                {{else}}
                    <li class="nav-item">
                        <a class="nav-link quickLink" href="/login" id="signIn">Sign In</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link quickLink" href="/signup" id="signUp">Sign Up</a>
                    </li>
                {{/if}}
            </ul>
            <form class="form-inline">
                <input class="form-control mr-sm-2" type="search" placeholder="Search Bites" aria-label="Search">
                <a class="my-2 my-sm-0 searchButton" type="submit">Search Recipes</a>
            </form>
        </div>
    </nav>

    <div class="container">
        <h1>Post a Bite</h1>

        <form>
            <div class="form-group">
                <label for="biteTitleInput">Bite Title</label>
                <input type="text" class="form-control" id="biteTitleInput" placeholder="Vegan Alfredo">
            </div>
            <div class="form-group">
                <label for="descriptionInput">Bite Preparation</label>
                <textarea class="form-control" id="descriptionInput" rows="3" placeholder="A great dish for the family!"></textarea>
            </div>
            <div class="form-group">
                <label for="ingredientsInput">Ingredients (Separated by '*')</label>
                <textarea class="form-control" id="ingredientsInput" rows="3" placeholder="vegan cheese*selantro"></textarea>
            </div>
            <div class="form-group">
                <label for="coverPhotoInput">Cover Photo</label>
                <input type="file" class="form-control-file" id="coverPhotoInput">
            </div>
        </form>
        <button class="loginButton postBiteButton">Post Bite!</button>
    </div>

</div>

