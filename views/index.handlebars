<div class="page">

    <nav class="navbar navbar-expand-lg navBar" style="background-color: #e3f2fd;">
        <a class="navbar-brand title" href="/">FoodDex</a>
        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link quickLink" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link quickLink" href="/post">Post a Bite</a>
                </li>
            </ul>
            <form class="form-inline">
                <input id="title" class="form-control mr-sm-2" type="search" placeholder="Search Bites" aria-label="Search">
                <a class="my-2 my-sm-0 searchButton" type="submit">Search Recipes</a>
            </form>
        </div>
    </nav>
    <div id="bites">
        {{#each bites}}
            <div class="biteContainer" data-id={{this.id}}>
                <h2 class="biteTitle">{{this.title}}</h2>
                <img class="biteImage" src={{this.image}}>
                <p class="bite">{{this.preparation}}</p>
            </div>
        {{/each}}
    </div>
</div>

<script>
    $(".form-inline").on("submit", function() {
    event.preventDefault();
    var title = $("#title").val().trim();

    var body = {
      title: title,
    };

    $.ajax("/api/bites:" + title, {
      type: "GET",
      data: body,
    }).then(
      function() {
        location.reload();
      });
  })
</script>

